<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"

    android:layout_margin="12dp"
    android:background="@drawable/background_menu_item">

    <com.chauthai.swipereveallayout.SwipeRevealLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:dragEdge="right"
        app:mode="same_level">


        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/yes"
                app:layout_constraintTop_toTopOf="parent">


                <ImageButton
                    android:id="@+id/add"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="8dp"
                    android:background="?android:selectableItemBackground"
                    android:scaleType="fitXY"
                    app:layout_goneMarginLeft="30dp"
                    app:srcCompat="@drawable/ic_add_circle_outline_black_24dp" />

                <TextView
                    android:id="@+id/count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="6dp"
                    android:gravity="center_vertical"

                    android:text="0"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/minus"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="?android:selectableItemBackground"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_remove_circle_outline_black_24dp" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/yes"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:background="#ffffffff"
                android:scaleType="fitXY"
                app:layout_constraintRight_toRightOf="parent"
                app:srcCompat="@drawable/yess" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <LinearLayout
                android:id="@+id/block"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_menu_item_black"
                android:orientation="horizontal"
                android:visibility="gone" />

            <TextView

                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLength="10"
                android:maxLines="1"
                android:text="Blinchik"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/imgs"
                app:layout_constraintRight_toLeftOf="@id/status"
                app:layout_constraintTop_toTopOf="parent" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/imgs"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="6dp"
                app:civ_border="true"
                app:civ_border_color="#0bdfbc"
                app:civ_border_width="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/status"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/help"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>
    </com.chauthai.swipereveallayout.SwipeRevealLayout>
</android.support.constraint.ConstraintLayout>