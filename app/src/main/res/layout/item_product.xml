<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"

    android:layout_margin="12dp"
    android:background="@drawable/background_menu_item">

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:maxLength="16"
        android:maxLines="1"
        android:text="Blinchik"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@id/imga"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imga"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginLeft="6dp"
        app:civ_border="true"
        app:civ_border_color="#0bdfbc"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imga"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/info"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/info"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/sendComment"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/mess"
            tools:ignore="VectorDrawableCompat" />

        <ImageButton

            android:id="@+id/minus"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="26dp"
            android:background="?android:selectableItemBackground"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_remove_circle_outline_black_24dp" />

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="6dp"
            android:gravity="center_vertical"

            android:text="0"
            android:textSize="26sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/add"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="8dp"
            android:background="?android:selectableItemBackground"
            android:scaleType="fitXY"
            app:layout_goneMarginLeft="30dp"
            app:srcCompat="@drawable/ic_add_circle_outline_black_24dp" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>