<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="400dp">

    <TextView
        android:textStyle="italic|bold"
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="1- STOL"
        android:textSize="20sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_menu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/protsent"
        app:layout_constraintTop_toBottomOf="@id/table" />

    <CheckBox
        android:id="@+id/protsent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:gravity="center"
        android:text="Oбслуживание 15%"
        app:layout_constraintBottom_toTopOf="@id/yes_res" />

    <Button
        android:id="@+id/yes_res"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/back_button_green"
        android:text="Оформить заказ"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toTopOf="@id/clr" />

    <Button
        android:textColor="#ffffff"
        android:id="@+id/clr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="#ae1010"
        android:text="Очистить"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>